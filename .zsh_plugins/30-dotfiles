dotfiles () {
    if [ $1 ]; then
        ssh "$1" "if [ -d .git ]; then git pull; else git clone -n https://github.com/vslinko/dotfiles.git && mv dotfiles/.git . && rm -r dotfiles && git reset --hard; fi"
    else
        old=$(pwd)
        cd
        git pull && source .zshrc
        cd "$old"
    fi
}
